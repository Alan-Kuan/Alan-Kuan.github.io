---
import BaseLayout from '@/layouts/Base.astro';
import Footer from '@/components/Footer.vue';
import ProfileCard from '@/components/ProfileCard.vue';

import { profile, intro } from '@/content/profile.ts';

const title = 'Alan Kuan | 官澔恩';
const desc = 'My personal website';
---

<BaseLayout {title} {desc}>
  <main class="w-90% md:w-75% lg:w-50% mx-auto my-12">
    <ProfileCard {...profile} client:idle />
    <div set:html={intro} class="mt-8" />
  </main>
  <Footer />
</BaseLayout>