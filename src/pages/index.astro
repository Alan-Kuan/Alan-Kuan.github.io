---
import BaseLayout from '@/layouts/Base.astro';
import ProfileCard from '@/components/ProfileCard.vue';
import PubList from '@/components/publication/PubList.vue';
import Footer from '@/components/Footer.vue';

import { profile, intro } from '@/content/profile.ts';
import { pubs } from '@/content/publications.ts';

const title = 'Alan Kuan | 官澔恩';
const desc = 'My personal website';
---

<BaseLayout {title} {desc}>
  <main class="w-90% md:w-75% lg:w-50% mx-auto my-12">
    <!-- Profile -->
    <ProfileCard {...profile} client:idle />
    <!-- Introduction -->
    <div set:html={intro} class="mt-8" />
    <!-- Publications -->
    <div class="flex items-center justify-between mt-8">
      <div class="w-full border-b-1 border-b-dashed" />
      <h1 class="text-xl px-4">Publications</h1>
      <div class="w-full border-b-1 border-b-dashed" />
    </div>
    <PubList {pubs} me="Hao-En Kuan" class="mt-4" />
  </main>
  <Footer />
</BaseLayout>