---
import { getCollection } from 'astro:content';

import IndexLayout from '@/layouts/Index.astro';

export async function getStaticPaths({ paginate }) {
  const pages = await getCollection('projects', ({ data }) => {
    return !data.draft;
  });
  return paginate(pages, { pageSize: 8 });
}

const title = 'Projects - Alan Kuan | 官澔恩';
const desc = 'Projects Alan Kuan have participated in';

const { page } = Astro.props;
---

<IndexLayout
  {title}
  {desc}
  {page}
  category="projects"
/>