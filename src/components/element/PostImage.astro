---
import Image from '@/components/Image.astro';

import type { ImageMetadata } from 'astro';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  title?: string;
}

const { src, alt, title } = Astro.props;
---

<Image
  class="md:w-90% lg:w-75% mx-auto margin-content"
  img_class="rounded-md"
  {src}
  {alt}
  {title}
/>