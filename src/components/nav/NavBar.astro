---
import { Image } from 'astro:assets';
import logo_img from '@/assets/logo.png';
import NavList from '@/components/nav/NavList.vue';

const links = [
  { text: 'Articles', route: '/' },
  { text: 'Projects', route: '/projects' },
  { text: 'Publications', route: '/publications' },
];
---

<nav
  class="
    sticky top-0 z-1
    w-full h-20
    px-5 py-2.5
    grid grid-cols-3
    bg-light-primary dark:bg-dark-primary
  "
>
  <div>
    <a class="inline-block" href="/">
      <Image
        class="w-15 logo"
        src={logo_img}
        alt="logo"
      />
    </a>
  </div>
  <div class="flex items-center">
    <NavList links={links} client:only="vue" />
  </div>
</nav>

<style>
.logo:hover {
  filter: drop-shadow(2px 0 2px rgba(255, 255, 255, 0.5))
    drop-shadow(-2px 0 2px rgba(255, 255, 255, 0.5))
    drop-shadow(0 2px 2px rgba(255, 255, 255, 0.5))
    drop-shadow(0 -2px 2px rgba(255, 255, 255, 0.5));
}
</style>