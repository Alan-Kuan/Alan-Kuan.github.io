---
import Avatar from '@/components/Avatar.vue';
import BaseLayout from '@/layouts/Base.astro';
import Image from '@/components/Image.vue';
import ProfileCard from '@/components/ProfileCard.vue';

import { avatar_urls, profile, intro } from '@/content/profile.ts';

interface Props {
  title: string;
  desc: string;
}

const {
  title,
  desc,
} = Astro.props;
---

<BaseLayout {title} {desc}>
  <div class="flex flex-col md:flex-row">
    {/* Left Column */}
    <div class="w-full md:w-30% lg:w-25%">
      {/* add `top-20` and `bottom-0` to make `overflow-y-scroll` effective */}
      <ProfileCard
        {...profile}
        class="md:fixed md:top-20 md:bottom-0 md:w-30% lg:w-25%"
      >
        <div slot="avatar">
          <Avatar {avatar_urls} />
        </div>
        <div slot="intro" set:html={intro} />
      </ProfileCard>
    </div>
    {/* Right Column */}
    <div
      class="
        w-full md:w-70% lg:w-75%
        md:h-[calc(100vh-5rem)]
        overflow-y-auto
      "
    >
      <slot />
    </div>
  </div>
</BaseLayout>