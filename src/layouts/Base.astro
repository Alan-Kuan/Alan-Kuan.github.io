---
import NavBar from '@/components/nav/NavBar.astro';
import { ClientRouter } from 'astro:transitions'

interface Props {
  title: string;
  desc: string;
}

const { title, desc } = Astro.props;
---

<!doctype html>
<html lang="zh-Hant-TW">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		<meta name="description" content={desc} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />

    {/* Mastodon */}
    <link rel="me" href="https://mastodon.social/@alankuan" />
    <meta name="fediverse:creator" content="@alankuan@mastodon.social">

    <script is:inline>
      const media_query = window.matchMedia('(prefers-color-scheme: dark)');

      function applyTheme() {
        document.documentElement.classList.toggle(
          'dark',
          (!('theme' in localStorage) && media_query.matches) ||
            localStorage.getItem('theme') === 'dark',
        );
      }

      media_query.addEventListener('change', (e) => applyTheme(e.matches));
      document.addEventListener('astro:after-swap', applyTheme);
      applyTheme();
    </script>
    <ClientRouter />
	</head>
  <body
    class={`
      bg-body-light text-text-dark
      dark:bg-body-dark dark:text-text-light
    `}
  >
    <NavBar />
    <slot />
	</body>
</html>

<style is:global>
	html {
    font-family: 'Noto Sans', 'Noto Sans TC', sans-serif;
    scroll-behavior: smooth;
	}
	code {
		font-family: 'Source Code Pro', monospace;
	}

  ::-webkit-scrollbar {
    width: 5px;
  }
  ::-webkit-scrollbar-track {
    border-radius: 5px;
  }
  ::-webkit-scrollbar-track:hover {
    background: #2c2c2c;
  }
  ::-webkit-scrollbar-thumb {
    background: #afafaf;
    border-radius: 5px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #8d8d8d;
  }
</style>