---
import WithProfileLayout from '@/layouts/WithProfile.astro';
import Footer from '@/components/Footer.vue';
import PostAttr from '@/components/post/PostAttr.vue';

import type { PostData as Props } from '@/types.ts';

const {
  title,
  desc,
  date,
  tags,
  banner_url,
} = Astro.props;
---

<WithProfileLayout
  title={`${title} | Alan Kuan`}
  desc={desc}
>
  {
    /* Banner */
    banner_url &&
    <div max-h-100 overflow-hidden>
      <img
        w-full
        src={banner_url}
        alt="Banner"
      />
    </div>
  }
  <main ma-8 px-8 pb-5>
    {/* Title & Attributes */}
    <h1 mt-2 text-3xl font-medium>{title}</h1>
    <div mt-2>
      <PostAttr {date} {tags} />
    </div>
    {/* Content */}
    <div mt-5 mb-5>
      <slot />
    </div>
  </main>
  <Footer />
</WithProfileLayout>